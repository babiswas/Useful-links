#Need root acces to create linux user
useradd -m -d /home/us1 us1
id username
#After creating user check the user using id username
id username
useradd -m -d /home/username -c "hello user" -g group_name -s /bin/bash -e expiry_date user_name
++++++++++++++ delete user ++++++++++
userdel username
userdel -r username
userdel -f username

usermod -g group_name username
usermod -G list_group username

uid(userid)
gid(groupid)
groups(list of groups)

